<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ThongKe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toobar"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
      
        <TextView
            android:layout_width="30dp"
            android:id="@+id/backTK"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/icon_back"
            android:layout_gravity="center"
            android:backgroundTint="@color/red">

        </TextView>
        <TextView

          
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#B2B4C1"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Thống Kê"
            android:textSize="25dp"
            android:gravity="center"
            android:textColor="@color/black"

            >

        </TextView>
    </LinearLayout>
   

    <LinearLayout
        android:id="@+id/linner"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/toobar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tháng : "
                android:textSize="16dp"/>

            <Spinner
                android:id="@+id/thang"
                android:layout_width="80dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="00dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Năm : "
                android:textSize="16dp"
                />

            <Spinner
                android:id="@+id/nam"
                android:layout_width="100dp"
                android:layout_height="wrap_content"></Spinner>
        </LinearLayout>

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Lọc"
            android:drawableLeft="@drawable/icon_search"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"/>
    </LinearLayout>


    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="530dp"
        android:layout_margin="5dp"



        app:layout_constraintTop_toBottomOf="@id/linner"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp" />
    <!--        app:layout_constraintBottom_toBottomOf="@+id/linnerBottom"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:id="@+id/linnerBottom"
        app:layout_constraintTop_toBottomOf="@+id/piechart"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView

            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Xuat File : "
            android:textSize="16dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:hint="Xuat file"
            android:id="@+id/btnXuat"
            android:layout_gravity="center"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>