<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NHẬP MÃ OTP"
                android:textColor="#224922"
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageView

                android:layout_width="124dp"
                android:layout_height="127dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Vui lòng nhập mã xác nhận mà chúng tôi đã gửi"
                android:textColor="#224922"
                android:textStyle="bold" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_OTP"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_countDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="356dp"
                    android:text="(60s)" />

                <TextView
                    android:id="@+id/textReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="23dp"
                    android:text="Gửi lại" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="272dp"
                android:layout_height="312dp"
                android:layout_marginLeft="70dp"
                android:background="@drawable/button_border">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_number_OTP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</LinearLayout>